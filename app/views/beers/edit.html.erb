<%= form_tag "/beers/#{@beer.id}", method: :patch do %>
  <%= label_tag :name %><br>
  <%= text_field_tag :name, @beer.name %><br>
  <%= label_tag :category %><br>
  <%= text_field_tag :category, @beer.category %><br>
  <%= label_tag :ABV %><br>
  <%= text_field_tag :ABV, @beer.ABV %><br>
  <%= label_tag :ideal_vessel %><br>
  <%= text_field_tag :ideal_vessel, @beer.ideal_vessel %><br>
  <%= label_tag :body %><br>
  <%= text_field_tag :body, @beer.body %><br>
  <%= label_tag :aroma %><br>
  <%= text_field_tag :aroma, @beer.aroma %><br>
  <%= label_tag :color %><br>
  <%= text_field_tag :color, @beer.color %><br>
  <%= label_tag :brewed_on %><br>
  <%= date_field_tag :brewed_on %><br>
  <%= submit_tag 'Update' %>
<% end %>
